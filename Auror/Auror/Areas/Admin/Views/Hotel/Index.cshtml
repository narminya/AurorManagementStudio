@model List<Hotel>


@{
    ViewData["Title"] = "Index";
}

<div id="portlet-config" class="modal hide">
    <div class="modal-header">
        <button data-dismiss="modal" class="close" type="button"></button>
        <h3>Widget Settings</h3>
    </div>
    <div class="modal-body">Widget settings form goes here</div>
</div>
<div class="clearfix"></div>
<div class="content">

    <div class="page-title">
        <i class="icon-custom-left"></i>
        <h3><span class="semi-bold">Hotels</span></h3>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="grid simple ">
                <div class="grid-title no-border">

                    <div class="tools">
                        <a href="javascript:;" class="collapse"></a>
                        <a href="#grid-config" data-toggle="modal" class="config"></a>
                        <a href="javascript:;" class="reload"></a>
                        <a href="javascript:;" class="remove"></a>
                    </div>
                </div>
                <div class="grid-body no-border">
                    <h3>Hotels </h3>
                    <table class="table no-more-tables">
                        <thead>
                            <tr>
                                <th style="width:9%">Hotel name</th>
                                <th style="width:10%">Phone</th>
                                <th style="width:6%">Category</th>
                                <th style="width:6%">Activity</th>
                                <th style="width:6%">Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><h4>@item.Name</h4></td>
                                    <td>
                                        <h4 class="muted">@item.Phone</h4>
                                    </td>
                                    <td>
                                        <h4 class="muted">@item.HotelCategory.Name</h4>
                                    </td>
                                    <td>
                                        @if (item.IsDeleted == true)
                                        {
                                            <h4>Deleted</h4>
                                        }
                                        else
                                        {
                                            <h4>Active</h4>

                                        }
                                    </td>
                                    <td>
                                        <a class="btn btn-success btn-cons-md" asp-controller="Hotel" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                                        @if ((await AuthorizationService.AuthorizeAsync(User, "AreaAdmin")).Succeeded)
                                        {
                                            <a class="btn btn-warning btn-cons-md" asp-controller="Hotel" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                            <a class="btn btn-danger btn-cons-md" id="deleteCat" data-id="@item.Id" name="@item.Name">Delete</a>

                                        }
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section script{

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>


        $(document).on("click", "#deleteCat", function (e) {
            let _id = $(this).attr("data-id");

            Swal.fire({
                title: `Are you sure to delete ${$(this).attr("name")}?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: "Get",
                        url: "Hotel/Delete/" + _id,
                        success: function (res) {
                            Swal.fire(
                                'Deleted!',
                                `${res.message}`,
                                'success'
                            )
                            location.reload();
                        }

                    })

                }
            })

        })
    </script>
}
}
