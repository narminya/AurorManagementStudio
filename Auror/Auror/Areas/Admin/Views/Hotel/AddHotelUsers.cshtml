@model HotelUserViewModel
@{
    ViewData["Title"] = "AddHotelUsers";
}

<div class="row">
    <div class="col-md-12">
        <div class="grid simple">
            <div class="grid-title no-border">
                <h4>Simple <span class="semi-bold">Elemets</span></h4>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="#grid-config" data-toggle="modal" class="config"></a>
                    <a href="javascript:;" class="reload"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="grid-body no-border">
                <br>
                <div class="row">
                    <div class="col-md-8 col-sm-8 col-xs-8">
                        <form method="post">
                            <div class="form-group">
                                <label class="form-label" asp-for="Name"></label>
                                <div class="controls">
                                    <input asp-for="Name" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" asp-for="Surname"></label>
                                <div class="controls">
                                    <input asp-for="Surname" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" asp-for="Email"></label>
                                <div class="controls">
                                    <input asp-for="Email" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" asp-for="Hotel"></label>
                                <span class="help">e.g. "some@example.com"</span>
                                <div class="controls">
                                    <select asp-for="Hotel" asp-items='new SelectList(Model.hotels,"Id", "Name")'></select>
                                </div>
                            </div>
                            <button class="btn btn-primary">Add user</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

