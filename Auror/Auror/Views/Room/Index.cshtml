@model RoomBookViewModel
@{
    ViewData["Title"] = "Index";
}

<!-- banner -->
<section class="hotel-banner-simple hotel-transition-bottom hotelmenu">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <div class="hotel-center hotel-title-frame">
                    <h1 class="hotel-mb-20 hotel-h1-inner">Otaqlar</h1>
                    <p class="hotel-mb-30">Laborum accusantium libero commodi. Voluptate consequatur itaque expedita accusamus impedit perspiciatis asperiores necessitatibus assumenda magnam ipsa.</p>
                    <ul class="hotel-breadcrumbs">
                        <li><a href="index.html">Ana Səhifə</a></li>
                        <li><span>Otaqlar</span></li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</section>
<section class="hotel-p-100-100">
    <div class="container">
        <div class="hotel-filter hotel-mb-60">
            <a href="#" data-filter="*" class="hotel-work-category hotel-current">Bütün Hotellər</a>
            @foreach (var item in Model.RoomTypes)
            {
                <a href="#" data-filter=".@item.Name.ToLower()" class="hotel-work-category">@item.Name</a>
            }




        </div>

        <div class="hotel-masonry-grid hotel-3-col" style="position: relative; height: 1592.34px;">

            <div class="hotel-grid-sizer"></div>
            @foreach (var item in Model.Rooms)
            {
                <div class="hotel-masonry-grid-item hotel-masonry-grid-item-33 @item.RoomType.Name.ToLower().Replace(" ","")" style="position: absolute; left: 0%; top: 0px;">

                    <!-- room card -->
                    <div class="hotel-room-card">
                        <div class="hotel-cover-frame imgLoad">
                            <a asp-controller="Room" asp-action="ReserveRoom" asp-route-id="@item.Id"><img class="lozad" alt="cover" src="~/img/rooms/@item.RoomImages.Where(c=>c.IsMain).FirstOrDefault().Path" data-loaded="true"></a>
                        </div>
                        <div class="hotel-description-frame">
                            <div class="hotel-room-features">
                                <div class="hotel-feature imgLoad">
                                    <div class="hotel-icon-frame"><img class="lozad" data-src="/img/icons/bed.svg" alt="icon" src="~/img/icons/bed.svg" data-loaded="true"></div>
                                    <span>@item.PeopleCount Nəfərlik</span>
                                </div>
                                <div class="hotel-feature imgLoad">
                                    <div class="hotel-icon-frame"><img class="lozad" data-src="/img/icons/square.svg" alt="icon" src="~/img/icons/square.svg" data-loaded="true"></div>
                                    <span>@item.RoomSquare Ft²</span>
                                </div>
                            </div>
                            <a href="roomSuite.html">
                                <h3 class="hotel-mb-20">@item.RoomType.Name</h3>
                            </a>
                            <div class="hotel-text-light hotel-text-sm hotel-mb-20">Lorem ipsum dolor sit amet consectetur adipisicing elit. Quidem, iste!</div>
                            <div class="hotel-card-bottom imgLoad">
                                <div class="hotel-price">@item.CurrentPrice <span>/gecə</span></div>
                                <a asp-controller="Room" asp-action="ReserveRoom" asp-route-id="@item.Id" class="hotel-btn">
                                    <img class="lozad" data-src="/img/icons/bookmark.svg" alt="icon" src="~/img/icons/bookmark.svg" data-loaded="true">Rezerv et
                                </a>
                            </div>
                        </div>
                    </div>
                    <!-- room card end -->

                </div>

            }


        </div>
    </div>
</section>

