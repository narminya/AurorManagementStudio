@model ContactViewModel
@{
    ViewData["Title"] = "Index";
}

<section class="hotel-banner-simple hotel-transition-bottom contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <div class="hotel-center hotel-title-frame">
                    <h1 class="hotel-mb-20 hotel-h1-inner">Əlaqə</h1>
                    <p class="hotel-mb-30">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Sequi quis molestias voluptas laborum..</p>
                    <ul class="hotel-breadcrumbs">
                        <li><a href="index.html">Ana Səhifə</a></li>
                        <li><span>Əlaqə</span></li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</section>

<section class="hotel-p-100-100">

    <div id="hotel-triger-1"></div>

    <div class="container">

        <!-- features card -->
        <div class="hotel-features-card">

            <div class="row">
                @foreach (var item in Model.Contacts)
                {
                    <div class="col-12 col-lg-4">

                        <!-- icon box -->
                        <div class="hotel-icon-box imgLoad">
                            <img class="lozad" data-src="/img/features/@item.Icon" alt="icon" class="hotel-mb-10">
                            <h5 class="hotel-mb-10">@item.Name</h5>
                            <p>@item.Content</p>
                        </div>
                        <!-- icon box end -->

                    </div>
                }

            </div>

        </div>
        <!-- contact end -->

    </div>
</section>

<section class="hotel-transition-top hotel-p-0-100">
    <div class="container">
        <div class="row">
          
            <div class="col-lg-12">
                <form class="hotel-scroll-animation" method="post" asp-action="Index">

                    @if (!string.IsNullOrWhiteSpace(Model.Message))
                    {
                        <div class="hotel-text-sm text-success">@Model.Message</div>
                    }


                    <div class="row">
                        <div class="col-lg-6">
                            <input asp-for="@Model.Name" placeholder="Adınız">
                            <span class="text-danger" asp-validation-for="@Model.Name"></span>
                        </div>
                        <div class="col-lg-6">
                            <input asp-for="@Model.Email" placeholder="Email">
                            <span class="text-danger" asp-validation-for="@Model.Email"></span>

                        </div>
                        <div class="col-lg-12">
                            <textarea asp-for="@Model.Content" rows="8" placeholder="Mesajınız"></textarea>
                            <span class="text-danger" asp-validation-for="@Model.Content"></span>

                        </div>
                        <div class="col-lg-12">
                            <div class="hotel-form-submit-frame">
                                <!-- temporary button to show the popup -->
                                <button type="submit" class="hotel-btn">Göndər</button>
                                <!-- <button class="hotel-btn">Send</button> -->
                                <div class="hotel-text-sm">*Şəxsi məlumatlarınızı üçüncü tərəflərə açıqlamayacağımıza söz veririk.</div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- map -->
<section class="map">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="hotel-mb-40 hotel-scroll-animation">Xəritədə yerimiz</h3>
        </div>
        <div class="col-lg-12">

            <div class="hotel-map-frame hotel-mb-60">
                <div class="hotel-lock"><i class="fas fa-lock"></i></div>
                <div id="map" class="hotel-map"></div>
            </div>

        </div>
    </div>
</section>

